server {
    listen 80 default_server;
    server_name _;

    root /wordpress;

    location / {
        index index.php index.html index.htm;
        try_files $uri $uri/ /index.php?q=$uri&$args;
    }

    # Do not serve PHP files from uploads directory
    location /wp-content/uploads {
        location ~ \.php$ {
            return 403;
        }
    }

    location ~ /\. {
       return 403;
    }

    location ~ \.php$ {
        try_files $uri =404;
        include fastcgi_php;
    }
}
